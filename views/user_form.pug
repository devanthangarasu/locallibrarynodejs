extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='name') First Name:
      input#name.form-control(type='text', placeholder='Name' name='name' required='true' value=(undefined===user ? '' : user.name) )
      label(for='username') User Name:
      input#username.form-control(type='text', placeholder='User name' name='username' required='true' value=(undefined===user ? '' : user.username))
    div.form-group
      label(for='email') Email:
      input#email.form-control(type='email', name='email' value=(undefined===user ? '' : user.email) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
